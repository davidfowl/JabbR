@using JabbR;
@{
    Layout = "_layout.cshtml";
}
<div class="user-request-reset-password">
    <form class="form-horizontal" action="@Url.Content("~/account/requestresetpassword")" method="post">
        @Html.ValidationSummary()
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user"></i></span>
                    @Html.TextBox("username", "input-block-level", "User name")
                </div>
            </div>
        </div> 
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">Request reset password</button>
                <a href="@Url.Content("~/")" class="btn">Cancel</a>
            </div>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>
